mixin form-tabs-qwiz()
	.tabs.tabs--js
		.tabs__caption
			.tabs__btn.btn.active
				+icon('phone-bg')
				| Телефон
			.tabs__btn.btn
				+icon('whatsapp')
				| WhatsApp
			.tabs__btn.btn
				+icon('viber')
				| Viber
			.tabs__btn.btn
				+icon('telegram')
				| Telegram
		.tabs__wrap
			.tabs__content.active
				.h6 Введите телефон:
				+input("+7 (999) 444-44-44","tel")(required)
			.tabs__content
				.h6 Введите WhatsApp:
				+input("+7 (999) 444-44-44","tel",'',"whatsapp")
			.tabs__content
				.h6 Введите Viber:
				+input("+7 (999) 444-44-44","tel",'',"viber")
			.tabs__content
				.h6 Введите Telegram:
				+input("Введите данные","text",'',"telegram")

mixin arrow()
	.swiper-button-hand.swiper-button-hand-prev.swiper-button-prev
		+icon('chevron-left')
	.swiper-button-hand.swiper-button-hand-next.swiper-button-next
		+icon('chevron-right')
//- /arrow for swiper-slider

mixin btn(t,btn,link)
	if btn
		+e.BUTTON.btn.btn.btn-primary(type= btn)&attributes(attributes)
			span!= t
	else
		+e.A.btn.btn.btn-primary(href= link)&attributes(attributes)
			span!= t

