mixin item-sos(icon, a='#')
	+e.A.item(href= a target="_blank" class=`--${icon}`)&attributes(attributes)
		if block
			block
		else
			+icon(icon)
//- social buttons
mixin soc()
	+b.soc
		if block
			block
		else
			+item-sos('whatsapp')
			+item-sos('viber')
			+item-sos('telegram')

